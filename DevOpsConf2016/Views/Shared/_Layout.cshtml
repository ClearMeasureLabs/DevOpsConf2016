<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DevOpsConf 2016 @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><img src="/Content/images/logo-devops.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    
<div id="home-bar">
    <div class="container">
    @if (User == null || !User.Identity.IsAuthenticated)
    {
        <div id="title" class="col-xs-8 col-sm-6 col-md-3">
            DevOpsConf 2016<br/>
            <div>February 25, 2016 - Online</div>
        </div>

        <div id="message" class="col-sm-3 col-md-6">
            Join us on air as we host our annual online Dev Ops
            conference! Hear the latest on building, evolving, and operating rapidly-changing resilient systems at scale!
            <div style="text-align: right"> - <a style="color: #fff" href="https://twitter.com/jeffreypalermo">Jeffrey Palermo</a>, Microsoft MVP
            </div>
        </div>

        <div class="col-xs-4 col-sm-3"></div>
    }
    </div>
</div>

    <div class="container body-content">
        @RenderBody()
        
        <footer>
            <hr />
            <p>DevOpsConf 2016 Sponsors:</p>
            <div class="row">
                <div class="col-sm-3"><a href="http://www.clear-measure.com/"><img class="img-responsive" src="/Content/images/logo-clearmeasure.png"/></a></div>
                <div class="col-sm-3"><a href="http://www.meetup.com/azureaustin/"><img class="img-responsive" src="/Content/images/logo-azureaustin.png"/></a></div>
                <div class="col-sm-3"><a href="http://www.meetup.com/azureaustin/"><img class="img-responsive" src="/Content/images/logo-codethetown.png"/></a></div>
                <div class="col-sm-3"><a href="https://octopus.com/"><img class="img-responsive" src="/Content/images/logo-octopus-deploy.png"/></a></div>
            </div>
            <div class="row">
                <div class="col-sm-3"><a href="https://www.jetbrains.com/"><img class="img-responsive" src="/Content/images/logo-jetbrains.png"/></a></div>
                <div class="col-sm-9">&nbsp;</div>
            </div>
            <br class="clearfix" />
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>/*<![CDATA[​*/(function(w,a,b,d,s){w[a]=w[a]||{};w[a][b]=w[a][b]||{q:[],track:function(r,e,t){this.q.push({r:r,e:e,t:t||+new Date});}};var e=d.createElement(s);var f=d.getElementsByTagName(s)[0];e.async=1;e.src='//info.clear-measure.com/cdnr/26/acton/bn/tracker/18153';f.parentNode.insertBefore(e,f);})(window,'ActOn','Beacon',document,'script');ActOn.Beacon.track();/*​]]>*/</script>
</body>
</html>
